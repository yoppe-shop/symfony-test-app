{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/special.css') }}" />
{% endblock %}
{% block javascript %}<script language="javascript" type="text/javascript" src="{{ asset('js/test.js') }}"></script>
{% endblock %}
{% block title %}Amazon-Test Startseite{% endblock %}
{% block body %}
<div>Hallo liebe User!</div>
{% if names is defined and product is defined %}
<div id="test1">Erster User: {{ names.0 }}</div>
<div>Namen durchlaufen:</div>
{% for name in names%}
<div id="test2">{{ name }}</div>
{% endfor %}
<div>Produktname: {{ product.getName() }}</div>
<div>Artikelnummer: {{ product.getModel() }}</div>
{% endif %}
{% endblock %}
